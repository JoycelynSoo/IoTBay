<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    
    <servlet>
        <servlet-name>CreateShipmentServlet</servlet-name>
        <servlet-class>beans.controller.CreateShipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateShipmentServlet</servlet-name>
        <url-pattern>/CreateShipmentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteShipmentServlet</servlet-name>
        <servlet-class>beans.controller.DeleteShipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteShipmentServlet</servlet-name>
        <url-pattern>/DeleteShipmentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateShipmentServlet</servlet-name>
        <servlet-class>beans.controller.UpdateShipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateShipmentServlet</servlet-name>
        <url-pattern>/UpdateShipmentServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
